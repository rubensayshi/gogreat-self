{% extends 'CMSBaseBundle::layout.html.twig' %}

{% block _content %}
	<div class="block two-col">
		<h3 class="header">{% block _title %}Site overview{% endblock %}</h3>
		
		<div class="content">
			<ul>
				{% for website in websites %}
					<li><a href="{{ path('site_edit', { 'id' : website.id }) }}">{{ website.name }}</a></li>
				{% endfor %}
			</ul>
		</div>
	</div>
{% endblock %}