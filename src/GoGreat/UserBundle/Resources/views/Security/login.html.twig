{% extends 'CMSBaseBundle::layout.html.twig' %}

{% block _content %}
	<h3>{% block _title %}Login{% endblock %}</h3>
	{% if error %}
		<div>{{ error.message }}</div>
	{% endif %}
	
	<form action="{{ path('_security_check') }}" method="post">
	    <label for="username">Username:</label>
	    <input type="text" id="username" name="_username" value="{{ last_username }}" /> <br />
	
	    <label for="password">Password:</label>
	    <input type="password" id="password" name="_password" /> <br />
	
	    {#
	        To set the target path via the form instead of the session:
	        <input type="hidden" name="_target_path" value="/foo/bar" />
	    #}
	
	    <input type="submit" name="login" />
	</form>
{% endblock %}