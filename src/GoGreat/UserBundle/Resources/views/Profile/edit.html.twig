{% extends 'CMSBaseBundle::layout.html.twig' %}

{% block _content %}
	<h3>{% block _title %}Control Panel :: Edit Profile{% endblock %}</h3>
	
	Edit your profile `{{ user.username }}`.
	<form action="#" method="post" {{ form_enctype(form) }}>
		{{ form_errors(form) }}
				
   		{{ form_row(form.username) }}
    	{{ form_row(form.password) }}
    	{{ form_row(form.email) }}
    	{{ form_row(form.addresses) }}
		
		{{ form_rest(form) }}
			
	    <input type="submit" />
	</form>
{% endblock %}